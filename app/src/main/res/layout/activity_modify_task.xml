<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/editTextModifiedTaskName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Novo Nome da Tarefa"/>

    <EditText
        android:id="@+id/editTextModifiedTaskDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nova Descrição da Tarefa"
        android:layout_below="@id/editTextModifiedTaskName"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/buttonModifyTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modificar Tarefa"
        android:layout_below="@id/editTextModifiedTaskDescription"
        android:layout_marginTop="24dp"/>

</RelativeLayout>
